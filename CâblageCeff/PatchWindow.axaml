<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CâblageCeff.PatchWindow"
         Icon="/Assets/CeffWeb.png"
        Title="CâblageCeff" Width="800" Height="450">

	<!--xmlns:vm="using:CâblageCeff.ViewModels"-->
	
	<!--
	<Design.DataContext>
		<vm:PatchWindowViewModel/>
	</Design.DataContext>
	-->

	<Grid>
		<!-- Définition des colonnes et lignes pour la disposition -->
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Menu -->
		<DockPanel VerticalAlignment="Top">
			<Grid Background="#2c3e50">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="32"/>
				</Grid.RowDefinitions>
				<Image Grid.Column="1" HorizontalAlignment="Right"  Height="45" Width="45" Source="/Assets/LogoCeffAlpha.png"/>

			</Grid>
		</DockPanel>

		<!-- Barre d'outils -->
		<Grid Grid.Row="1" Background="#5c6e80">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
			<Rectangle Grid.ColumnSpan="7" Fill="#7c8ea0" Height="55"/>
			<Button Background="#e1e1e1" Width="45" Height="45" Margin="5">
				<Image Height="40" Width="40" Source="/Assets/rowAdd.png"/>
			</Button>
			<Button Grid.Column="1" Background="#e1e1e1" Width="45" Height="45" Margin="5">
				<Image Height="40" Width="40" Source="/Assets/rowRemove.png"/>
			</Button>
			<Button Grid.Column="2" Background="#e1e1e1" Width="45" Height="45" Margin="5">
				<Image Height="35" Width="35" Source="/Assets/rowUpdate.png"/>
			</Button>
			<Button Grid.Column="3" Background="#e1e1e1" Width="45" Height="45" Margin="5">
				<Image Height="35" Width="35" Source="/Assets/exit.png"/>
			</Button>
		</Grid>
		
		<Grid Grid.Row="2" Background="#4c5e70">
			<TextBlock Text="BD59.8 Patchs" Foreground="White" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold"/>
		</Grid>

		<!-- DataGrid -->
		<DataGrid Grid.Row="2"
                  Name="PatchtDataGrid" IsReadOnly="True"
                  Background="White"
                  RowHeight="30"
                  CanUserReorderColumns="True"
                  CanUserResizeColumns="True"
                  CanUserSortColumns="True"
                  GridLinesVisibility="All"
                  BorderThickness="2" BorderBrush="#5c6e80" Margin="2">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Nom" Width="Auto"/>
				<DataGridTextColumn Header="Nom Panel" Width="Auto"/>
				<DataGridTextColumn Header="Type de patch" Width="Auto"/>
				<DataGridTextColumn Header="Emplacement" Width="Auto" />
				<DataGridTextColumn Header="Destination" Width="Auto"/>
				<DataGridTextColumn Header="Description" Width="Auto" />
			</DataGrid.Columns>

			<!-- Ajout de survol et de couleurs alternées pour les lignes -->
			<DataGrid.Styles>
				<Style Selector="DataGridRow">
					<Style.Setters>
						<Setter Property="Background" Value="#ecf0f1"/>
						<Setter Property="BorderBrush" Value="#bdc3c7"/>
					</Style.Setters>
				</Style>
				<Style Selector="DataGridRow:hover">
					<Style.Setters>
						<Setter Property="Background" Value="#3498db"/>
						<Setter Property="Foreground" Value="White"/>
					</Style.Setters>
				</Style>
			</DataGrid.Styles>
		</DataGrid>

		<!-- Affichage du nombre de patch panels -->
		<Grid Background="#4c5e70" Grid.Row="4">
		<TextBlock Text="16 patch(s)" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontWeight="Bold" Foreground="White"/>
		</Grid>
	</Grid>
	
</Window>
